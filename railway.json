{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "NIXPACKS",
        "buildCommand": "pnpm install && pnpm prisma generate && pnpm run build"
    },
    "deploy": {
        "startCommand": "pnpm run start:prod",
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 10
    }
}